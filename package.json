{
  "name": "hardhat-test-utils",
  "version": "0.1.1",
  "description": "Handy utilities for testing contracts in Hardhat projects",
  "homepage": "https://github.com/theNvN/hardhat-test-utils#readme",
  "repository": "github:theNvnN/hardhat-test-utils",
  "author": "Naveen Sahu - <thenvnsahu@gmail.com>",
  "license": "MIT",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "keywords": [
    "ethereum",
    "smart-contracts",
    "hardhat",
    "hardhat-plugin"
  ],
  "scripts": {
    "lint": "yarn prettier --check && yarn eslint",
    "lint:fix": "yarn prettier --write && yarn eslint --fix",
    "eslint": "eslint 'src/**/*.ts' 'test/**/*.ts'",
    "prettier": "prettier \"**/*.{js,md,json}\"",
    "test:prepare": "cd ./test/fixture-projects/hardhat-project && hardhat compile",
    "test": "yarn test:prepare && mocha --exit --recursive 'test/**/*.test.ts'",
    "build": "tsc",
    "release": "release-it",
    "prepare": "husky install"
  },
  "files": [
    "dist/src/",
    "src/",
    "internal/",
    "types/",
    "*.d.ts",
    "*.d.ts.map",
    "*.js",
    "*.js.map",
    "LICENSE",
    "README.md"
  ],
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.5",
    "@release-it/keep-a-changelog": "^2.5.0",
    "@types/chai": "^4.1.7",
    "@types/chai-as-promised": "^7.1.5",
    "@types/fs-extra": "^5.0.4",
    "@types/mocha": "^5.2.6",
    "@types/node": "^8.10.38",
    "@types/sinon-chai": "^3.2.8",
    "@typescript-eslint/eslint-plugin": "^5.19.0",
    "@typescript-eslint/parser": "^5.19.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "eslint": "^8.13.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "ethereum-waffle": "^3.4.4",
    "ethers": "^5.0.0",
    "hardhat": "^2.0.0",
    "husky": "^7.0.0",
    "mocha": "^7.1.2",
    "prettier": "^2.6.2",
    "release-it": "^14.14.2",
    "ts-node": "^8.1.0",
    "typescript": "^4.6.3"
  },
  "peerDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.5",
    "ethers": "^5.0.0",
    "hardhat": "^2.0.0"
  }
}
